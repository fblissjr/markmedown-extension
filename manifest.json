{
  "manifest_version": 3,
  "name": "MarkMeDown",
  "version": "1.0.0",
  "description": "Convert webpage content to Markdown via right-click menu",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "MarkMeDown"
  }
}
